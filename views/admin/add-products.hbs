<!-- Blank Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row bg-secondary rounded justify-content-center mx-0">
        <div class="col-md-7 bg-light rounded">
            <div class=" container row">
                <div class="ml-5 col-md-12">
                    <h2 class="text-center mt-5">Add Products</h2>
                    <form action="/admin/products/add_product" method="post" enctype="multipart/form-data">
                        <label class="text-dark" for="">Name</label>
                        <input type="text" name="name" class="form-control mb-2">

                        <label class="text-dark" for="">Company</label>
                        <input type="text" name="company" class="form-control mb-2">


                        <label class="text-dark mb-2" for="">Category</label><br>
                        <select name="category" id="prdtcategory" class="form-control mb-2">
                            <option>BIKES</option>
                            <option>APPARELS</option>
                            <option>ACCESSORIES</option>
                        </select><br>

                        
                        <div id="prdtType" class="pb-3">
                            <p class="text-dark">Types</p>
                            {{#each bikeTypes}}
                            {{#each types}}
                            <div class="">
                                <input type="radio" class="" value="{{this}}" name="type">
                                <label for="" class="text-dark" style="margin-right: 10px;">{{this}}</label>
                            </div>
                            {{/each}}
                            {{/each}}
                        </div>

                        <label class="text-dark" for="">Description</label>
                        <textarea name="description" class="form-control" rows="5" ></textarea>

                        <label class="text-dark" for="">Price</label>
                        <input type="Number" name="price" class="form-control mb-2">

                        <label class="text-dark" for="">Stock</label>
                        <input type="number" id="stock1" name="stock" class="form-control mb-2">

                        <label class="text-dark" for="">Image</label>
                        <input type="file" name="image" multiple class="form-control mb-2">

                        <button type="submit" class="btn btn-success mt-4 mb-4">Submit</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
