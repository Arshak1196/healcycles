<script type="text/javascript">
    $(document).ready(function () {
        $("select").change(function () {
            var str = $(this).val(); // On Change get the option value
            var res = str.split(".");
            if (res[0] == 'BIKES') {
                document.getElementById("prdtType").style.display = "block";
            }
            else {
                document.getElementById("prdtType").style.display = "none";
            }
        });
    });         
</script>